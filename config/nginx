upstream unicorn_sgpropertyspider {
  server unix:/tmp/unicorn_sgpropertyspider.sock fail_timeout=0;
}

server {
  listen 80 default_server;

  server_name pgsgspider.servehttp.com;
  root /home/deploy/apps/sgpropertyspider/current/public;
  try_files $uri/index.html $uri @unicorn_sgpropertyspider;

  location @unicorn_sgpropertyspider {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_set_header X-Forwarded-Proto https;
    proxy_pass http://unicorn_sgpropertyspider;
    # limit_req zone=one;
    access_log /home/deploy/apps/sgpropertyspider/shared/log/nginx.access.log;
    error_log /home/deploy/apps/sgpropertyspider/shared/log/nginx.error.log;
  }

  location ~ ^/(assets|images|javascripts|stylesheets|swfs|system)/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
    add_header Last-Modified "";
    add_header ETag "";

    open_file_cache max=1000 inactive=500s;
    open_file_cache_valid 600s;
    open_file_cache_errors on;
    break;
  }

  client_max_body_size 4G;
  keepalive_timeout 10;

  error_page 500 502 504 /500.html;
  error_page 503 @503;

  location = agents.csv {
    internal;
    add_header Content-disposition "attachment; filename=$1";
    add_header Content-Type application/vnd.ms-excel;
  }

  location = /50x.html {
    root html;
  }

  location = /404.html {
    root html;
  }

  location @503 {
    error_page 405 = /system/maintenance.html;
    if (-f $document_root/system/maintenance.html) {
      rewrite ^(.*)$ /system/maintenance.html break;
    }
    rewrite ^(.*)$ /503.html break;
  }

  if ($request_method !~ ^(GET|HEAD|PUT|POST|DELETE|OPTIONS)$ ){
    return 405;
  }

  if (-f $document_root/system/maintenance.html) {
    return 503;
  }

  location ~ \.(php|html)$ {
    return 405;
  }
}
